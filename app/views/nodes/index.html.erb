<p id="notice"><%= notice %></p>

<h1>Nodes</h1>
<br/>
<table class="table table-striped">
  <thead class="thead-ligh">
    <tr>
      <th scope="col">Room name</th>
      <th scope="col">Room number</th>
      <th scope="col">Room capacity</th>
      <th scope="col">X</th>
      <th scope="col">Y</th>
      <th scope="col">Floor</th>
      <th scope="col">Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.room_name %></td>
        <td><%= node.room_number %></td>
        <td><%= node.room_capacity %></td>
        <td><%= node.x %></td>
        <td><%= node.y %></td>
        <td><%= node.floor %></td>
        <td><%= node.building %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

